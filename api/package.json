{
  "name": "syn-by-design-api",
  "version": "0.1.0",
  "description": "Eric Masiello's portfolio API",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "start": "node build",
    "lint": "tslint 'src/**/*.ts' --format stylish -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "author": "Eric Masiello",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^4.6.4",
    "await-to-js": "~2.1.1",
    "boom": "~7.3.0",
    "compression": "~1.7.3",
    "express": "~4.16.4",
    "lodash": "^4.17.11",
    "logrocket": "^0.6.19",
    "node-fetch": "~2.3.0",
    "query-string": "~6.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/boom": "~7.2.1",
    "@types/compression": "0.0.36",
    "@types/express": "~4.16.1",
    "@types/jest": "^24.0.9",
    "@types/lodash": "^4.14.123",
    "@types/node-fetch": "^2.1.6",
    "@types/query-string": "~6.2.0",
    "@types/serialize-javascript": "~1.5.0",
    "@types/winston": "~2.4.4",
    "husky": "~0.14.3",
    "jest": "24.1.0",
    "jest-styled-components": "~6.3.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "~2.6.3",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint": "~5.13.1",
    "tslint-config-airbnb": "~5.11.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-loader": "~3.5.4",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "~3.1.2",
    "webpack-merge": "~4.1.5",
    "webpack-node-externals": "~1.7.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig-jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/typings.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 40,
        "statements": 40
      }
    },
    "setupFiles": [
      "./test/setup.js"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/build"
    ]
  }
}
