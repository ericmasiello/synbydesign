{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:common-ui; npm run build:website",
    "build:common-ui": "yarn workspace @synbydesign/common-ui build",
    "build:website": "yarn workspace @synbydesign/website build",
    "format": "pretty-quick --pattern '**/*.*(js|jsx|json)'"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.*(js|jsx|json)'"
    }
  }
}
