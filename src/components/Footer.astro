---
import Container from './Container.astro';
import AnimatedLink from './AnimatedLink.astro';
import { MY_NAME } from '../config';
import * as ContactMarkdown from '../common/contact.md';
import type { ContactFrontmatter } from '../common/contact';

const today = new Date();
const contact = ContactMarkdown.frontmatter as ContactFrontmatter;
---

<Container as="footer" class="footer">
  <AnimatedLink href={`mailto:${contact.email}`}>
    Contact Me{' '}
    <span role="img" aria-label="envolope with heart">
      {' '}
      ðŸ’Œ
    </span>
  </AnimatedLink>
  <span class="copyright">
    &copy; {today.getFullYear()}
    {MY_NAME}. All rights reserved.
  </span>
</Container>
<style>
  .footer {
    padding-block-start: 2rem;
    padding-block-end: 2rem;
  }

  @media (min-width: 31.25rem) {
    .footer {
      display: flex;
      justify-content: space-between;
    }
  }

  .copyright {
    display: block;
    margin-block-start: 1rem;
  }

  @media (min-width: 31.25rem) {
    .copyright {
      margin-block-start: 0;
    }
  }
</style>
