---
import classNames from 'classnames';

interface Props extends astroHTML.JSX.BaseHTMLAttributes {
  as?: keyof HTMLElementTagNameMap;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  bold?: boolean;
  upper?: boolean;
}

const { as: Element = 'span', level, upper, bold, slot, class: className, ...rest } = Astro.props as Props;

const classes = classNames('h', className, {
  [`h${level}`]: !!level,
  upper: !!upper,
  bold: !!bold,
});
---

<Element class={classes} {...rest}>
  <slot />
</Element>

<style>
  .h {
    font-family: var(--font-header);
  }

  .h1 {
    font-size: 4rem;
    line-height: 1.1;
  }

  .h2 {
    font-size: 3rem;
    line-height: 1.1;
  }

  .h3 {
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .h4 {
    font-size: 2rem;
    line-height: 1.3;
  }

  .h5 {
    font-size: 1.5rem;
    line-height: 1.6;
  }

  .h6 {
    font-size: 1.3rem;
    line-height: 1.6;
  }

  .upper {
    text-transform: uppercase;
  }

  .bold {
    font-weight: var(--font-header-weight-bold);
  }
</style>
