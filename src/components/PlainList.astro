---
import classNames from 'classnames';

export interface Props extends astroHTML.JSX.BaseHTMLAttributes {
  as?: 'ul' | 'ol';
  spacing?: 'none' | 'small' | 'normal' | 'large';
}

const { as: Element = 'ul', spacing = 'normal', class: className, slot, ...rest } = Astro.props;

const classes = classNames('list', spacing, className);
---

<Element class={classes} {...rest}>
  <slot />
</Element>

<style>
  .list {
    list-style-type: none;
    margin-block-start: 0;
    margin-block-end: 1rem;
    padding: 0;
  }

  .list.none > :global(li) {
    margin-block-end: 0;
  }

  .list.small > :global(li) {
    margin-block-end: 0.125rem;
  }

  .list > :global(li) {
    margin-block-end: 0.25rem;
  }

  .list.large > :global(li) {
    margin-block-end: 0.5rem;
  }
</style>
