---
import classNames from 'classnames';

export interface Props extends astroHTML.JSX.BaseHTMLAttributes {
  as?: keyof HTMLElementTagNameMap;
  small?: boolean;
  muted?: boolean;
}

const { as: Element = 'span', small = false, muted = false, slot, class: className, ...rest } = Astro.props;

const classes = classNames('text', className, { small: small, muted: muted });
---

<Element class={classes} {...rest}>
  <slot />
</Element>

<style>
  .text {
    font-family: var(--font-base);
    font-size: var(--font-size-body);
  }

  @media only screen and (min-width: 992px) {
    .text {
      font-size: 0.9375rem;
    }
  }

  @media only screen and (min-width: 1200px) {
    .text {
      font-size: 1rem;
    }
  }

  .small {
    font-size: 0.75rem;
  }

  @media only screen and (min-width: 992px) {
    .small {
      font-size: 0.8rem;
    }
  }

  .muted {
    color: var(--color-muted);
  }
</style>
